<div class="card">
  <% if header %>
    <div class="card-header">
      <%= header %>
    </div>
  <% end %>
  <div class="card-body">
    <div class="card-text">
      <%= body %>
    </div>
  </div>
  <% if footer %>
    <div class="card-footer">
      <%= footer %>
    </div>
  <% end %>
</div>
