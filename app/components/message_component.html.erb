<div class="<%= "d-flex align-items-start #{align}" %>">
  <% if index_message %>
    <div class="mt-1">
      <%= render AvatarComponent.new(user: message.other_user(user)) %>
    </div>
  <% end %>
  <div>
    <p class="<%= "#{background_color} px-3 py-2 rounded-4 mx-3 mb-1" %>"><%= message.content %></p>
    <p class="<%= " #{align} fs-6 mx-4 mb-0" %>"><%= helpers.time_to_display(message.created_at) %></p>
  </div>
</div>
