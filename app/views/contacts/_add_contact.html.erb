<div id="new_contact">
  <%= form_with(
        url: contacts_path,
        id: "new-new_contact",
        class: "d-flex flex-row align-items-center") do |form| %>
    <%= form.hidden_field :contact_id, value: contact.id %>
    <%= form.button(
      type: :submit,
      class: "border-0 rounded-5 bg-white",
      data: { turbo_confirm: t("contacts.index.add_contact.confirm")} ) do %>
      <p class="my-0"><%= contact.username %></p>
    <% end %>
  <% end %>
</div>
