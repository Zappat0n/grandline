<div class="mx-auto w-50 mt-5">
  <%= render CardComponent.new do |card| %>
    <% card.with_header do %>
      <h2 class="text-center mb-0"><%= t(".headline") %></h2>
    <% end %>

    <% card.with_body do %>
      <div class="text-center">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field text-center mb-3">
            <%= f.label :password, t(".new_password") %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "underline w-75" %>
          </div>

          <div class="field text-center mb-3">
            <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "underline w-75" %>
          </div>

          <div class="actions">
            <%= f.submit t(".change_my_password"), class: "btn btn-primary w-75 mx-auto" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  <% end %>
</div>



