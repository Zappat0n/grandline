<div id="new_message">
  <%= form_with(
        url: messages_path,
        id: "new-message",
        class: "d-flex flex-row align-items-center") do |form| %>
    <%= form.hidden_field :receiver_id, value: receiver.id %>
    <%= form.text_area :content,
                       id: "new-message-content",
                       class: "form-control",
                       autofocus: true,
                       data: { "messages-target" => "textArea" } %>
    <%= form.button(type: :submit, class: "border-0 rounded-5 ms-2 p-2 bg-white") do %>
      <%= image_tag "icons/paper_plane_white.svg", width: 48, height: 48, alt: "Submit", class: "bg-primary rounded-circle p-2" %>
    <% end %>
  <% end %>
</div>
