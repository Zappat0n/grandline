<%= form_with(
      url: messages_path,
      id: "new-message",
      class: "footer-chat d-flex flex-row align-items-center") do |form| %>
  <%= form.hidden_field :receiver_id, value: receiver.id %>
  <%= form.text_area :content,
                     class: "form-control",
                     data: { "messages-target" => "textArea" } %>
  <%= form.button(type: :submit, class: "border-0 rounded-5 ms-2 p-2 bg-white") do %>
    <i class="fa-regular fa-paper-plane fa-2x color-secondary" aria-hidden="true"></i>
  <% end %>
<% end %>
