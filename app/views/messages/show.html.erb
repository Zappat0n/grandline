<div class="container screen-size w-50 mt-1"
     data-controller="messages"
     data-messages-room-value=<%= room_name %>>
  <%= render CardComponent.new do |card| %>
    <% card.with_header do %>
      <h1 class="text-center fs-3 mb-0">Conversation with <%= receiver.username %></h1>
    <% end %>

    <% card.with_body do %>
      <div>
        <div id="messagesContainer" class="messages" data-messages-target="container">
          <%= render partial: "messages/message", collection: messages %>
        </div>
      </div>
    <% end %>

    <% card.with_footer do %>
      <%= render "messages/form", receiver: receiver %>
    <% end %>
  <% end %>
</div>
